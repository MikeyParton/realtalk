<% content_for :navbar_contents do %>
	<ul class="nav-center">
	  <li><%= icon('user') %>&nbsp;<span>Contacts</span></li>
	</ul>
<% end %>

<% content_for :footer_contents do %>
	<%= render '/shared/standard_footer' %>
<% end %>

<div class = "contact-list">
	<% @users.each do |contact| %>
		<% if contact.id != current_user.id %>
		<%= link_to chats_path(sender_id: current_user.id, recipient_id: contact.id), method: "post" do %>
		<div class= "contact">
			<div class= "user-thumbnail">
				<%= image_tag avatar(contact) %>
			</div>
			<div class= "user-info">
				<h4><%= contact.name %></h4>
				<p><%= contact.email %></p>
			</div>
		</div>
		<% end %>
		<hr>
		<% end %>
	<% end %>
</div>