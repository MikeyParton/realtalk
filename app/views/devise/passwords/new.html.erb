<h2>Reset Password</h2>

<%= link_to new_user_session_path do %>
	<button class="side-btn realtalk-btn btn btn-primary btn-lg">
		<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
	</button>	
<% end %>
<br>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class="field">
    <%= f.email_field :email, placeholder: "Email", autofocus: true, placeholder: "Email" %>
    <%= render partial: "/devise/shared/field_error", locals: { resource: @user, field: :email } %>
  </div>

  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />

  <div class="actions">
    <%= f.submit "Send Link", class: "realtalk-btn btn btn-primary btn-lg" %>
  </div>
<% end %>