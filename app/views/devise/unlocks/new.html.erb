<h2>Resend Unlock Link</h2>

<%= link_to new_user_password_path do %>
	<button class="side-btn realtalk-btn btn btn-primary btn-lg">
		<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
	</button>	
<% end %>
<br>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
    <%= render partial: "/devise/shared/field_error", locals: { resource: @user, field: :email } %>
  </div>

  <div class="actions">
    <%= f.submit "Send", class: "realtalk-btn btn btn-primary btn-lg" %>
  </div>
<% end %>
